<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

<!--    SINCE ALL ELEMENTS IN THIS LAYOUT ARE IN A VERTICAL ORIENTATION-->
<!--    I DECIDED TO USE LINEAR LAYOUT-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/instructionsTitle"
            style="@style/fragmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/instructions" />

        <TextView
            android:id="@+id/instructionsBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="10sp"
            android:text="@string/instruction_body"
            android:textAlignment="center"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/catalogButton"
            style="@style/navigation_button"
            android:text="@string/shoe_catalog"
            android:layout_marginTop="24dp"/>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
